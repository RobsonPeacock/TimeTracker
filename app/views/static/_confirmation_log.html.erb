<% recent_audit_logs.each do |recent_audit_logs| %>
  <div class="homepage-block col-md-3">
    <h4>
      <%= recent_audit_logs.user.full_name %>
    </h4>

    <p>
      <span class="font-weight-bold">Week starting:</span> <%= recent_audit_logs.start_date %>
    </p>

    <p>
      <span class="font-weight-bold">Confirmed at:</span> <%= recent_audit_logs.end_date || status_label('pending') %>
    </p>

    <p>
      <span class="font-weight-bold">Status:</span> <%= status_label(recent_audit_logs.status) %>
    </p>
  </div>
<% end %>
