<%= form_for @post do |f| %>

	<div class="form-group">
		<%= f.label :daily_hours %>
		<%= f.number_field :daily_hours, step: 0.1, class: 'form-control' %>
	</div>

	<div class="form-group">
  	<%= f.label :date %>
  	<%= f.date_field :date, class: 'form-control' %>
	</div>

	<div class="form-group">
		<%= f.label :work_performed %>
  	<%= f.text_area :work_performed, class: 'form-control' %>
	</div>

	<%= render partial: 'status', locals: { f: f } if current_user.type == 'AdminUser' %>

  <%= f.submit 'Save', class: 'btn btn-primary' %>

<% end %>
