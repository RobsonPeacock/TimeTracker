<tbody>
  <tr>
    <td>
      <%= post.id %>
    </td>
    <td>
      <%= post.overtime_request %>
    </td>
    <td>
      <%= post.date %>
    </td>
    <td>
      <%= link_to truncate(post.rationale), post %>
    </td>
    <td>
      <%= post.user.full_name %>
    </td>
    <td>
      <%= status_label(post.status) %>
    </td>
    <td>
      <%= link_to fa_icon('pen'), edit_post_path(post), id: "edit_#{post.id}" if policy(post).update? %>
    </td>
    <td>
      <%= link_to fa_icon('trash'), post_path(post), method: :delete, id: "delete_post_#{post.id}_from_index", data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
</tbody>
