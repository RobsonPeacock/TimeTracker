<h1>Posts</h1>

<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>
        #
      </th>
      <th>
        Date
      </th>
      <th>
        Rationale
      </th>
      <th>
        User
      </th>
    </tr>
  </thead>
  <% @posts.each do |post| %>
    <tbody>
      <tr>
        <td>
          <%= post.id %>
        </td>
        <td>
          <%= post.date %>
        </td>
        <td>
          <%= truncate(post.rationale) %>
        </td>
        <td>
          <%= post.user.first_name %>
        </td>
      </tr>
    </tbody>
  <% end %>
</table>
